/* Seating plan */

#seating {
	min-width: 645px;
}

.events-seating-key {
	margin-top: 0px;
	padding: 2px 0px;
}

table.seating {
	border: none;
}

table.seating td {
	vertical-align: top;
    padding: 2px;
}

ul.seating {
	list-style-type: none;
	margin: 0px;
	border: 1px solid #666;
	padding: 0.25em;
	min-height: 3em;
	background-color: #333;
}

ul#unassigned {
	background-color: #222;
	min-height: 0;
}

#unassigned {
	border: none;
	padding: 0em;
}


#unassigned_empty {
	border: none;
	padding: 0em;
	min-height: 0;
	background-color: #222;
}

ul.seatingleft {
	margin-left: 1em;
}

ul.seatingright {
	margin-right: 1em;
}

ul.seating li {
	position: relative;
	padding: 0;
	min-width: 5em;
	height: 2.4em;
	overflow: hidden;
	text-align: center;
	border: 1px solid #555;
}

ul.seating li, span.seating {
	background-color: #444;
}

ul.seating li.allow_edit {
	cursor: move;
}

ul.seating li table.seating_item {
	width: 100%;
	height: 100%;
}

ul.seating li table.seating_item td {
	vertical-align: middle;
}

ul.seating li.seating_moving {
	z-index: 1;
}

ul.seating div {
	padding: 0em 0.1em;
	width: 5em;
	height: 3px;
	overflow: hidden; /* For IE6 only. */
}

ul.seating div.insert {
	background: #888;
	height: 0.2em;
    width: 98%;
	border-top: 3px solid #333;
	border-bottom: 3px solid #333;
}

li.added td, span.added {
    background: #006600;
}

li.removed td, span.removed {
    background: #660000;
}

li.moved td, span.moved {
    background: #660066;
}

li.unsignedup td, span.unsignedup {
    color: #FF99DD;
}

/* Comments */

#comments {
	margin: 10px 0 0 0;
	padding: 0;
	clear:left;
}

#comments li {
	display: block;
}

#comments #commentheader .rev, #comments #commentheader .creator, #comments #commentheader .comment {
	background-color: #444;
	font-weight: bold;
}


#comments #commentheader {
	background-color: #444;
}

#comments .newrevision ul, #comments .revision ul {
	background-color: #333;
}

#comments  .rev {
	width: 90px;
	padding-left: 10px;
	float: left;
	background-color: #333;
}

#comments .creator {
	width: 90px;
	padding-left: 10px;
	float: left;
	border-left: 1px solid #222;
	border-right: 1px solid #222;
	margin-right: 10px;
	background-color: #333;
}

#comments .comment {
	width: 100%;
	background-color: #333;
	float: left;
	margin-right: -240px;
}

#comments li ul {
	clear: left;
	overflow: hidden;
	border-bottom: 1px solid #222;
}

#comments {
	line-height: 2em;
}

#comments .submit {
	float: none;
}
